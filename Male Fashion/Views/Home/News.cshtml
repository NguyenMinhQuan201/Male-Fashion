@model List<Domain.Models.Dto.Blog.BlogVm>

<section class="latest spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Latest News</span>
                    <h2>Fashion New Trends</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" style="background-image: url(https://localhost:7179/user_content/@Html.DisplayFor(moldelItem => item.Image))"></div>
                        <div class="blog__item__text">
                            <span><img src="img/icon/calendar.png" alt="">@Html.DisplayFor(moldelItem => item.CreatedAt)</span>
                            <h5>@Html.DisplayFor(moldelItem => item.Title)</h5>
                            <a href="#">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


