@model Domain.Common.PagedResult<Domain.Models.Dto.Product.GetProductDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cate = TempData["idCate"] == null ? 0 : TempData["idCate"];
    var brandingSS = TempData["branding"] == null ? "" : TempData["branding"];
    var priceMinSS = TempData["priceMin"] == null ? 0 : TempData["priceMin"];
    var priceMaxSS = TempData["priceMax"] == null ? 0 : TempData["priceMax"];
    bool isLocalhost = Context.Request.Host.Host.Equals("localhost", StringComparison.OrdinalIgnoreCase)
                      || Context.Request.Host.Host.Equals("127.0.0.1", StringComparison.OrdinalIgnoreCase);
    var url = "";
    string str = ViewBag.url;
    if (isLocalhost)
    {
        url = "https://localhost:7179";
    }
    else
    {
        url = str;
    }
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/Trang-chu.css">
